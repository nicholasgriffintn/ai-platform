meta {
  name: Create Chat Completion
  type: http
  seq: 1
}

post {
  url: {{host}}/chat/completions
  body: json
  auth: bearer
}

headers {
  x-user-email: nick@undefined.computer
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "completion_id": "test_response",
    "model": "mistral-small",
    "should_think": true,
    "messages": [
      {
        "role": "user",
        "content": [
          {
            "type": "text",
            "text": "What's your favourite thing about AI?"
          }
        ]
      }
    ],
    "use_rag": false,
    "store": false,
    "response_mode": "normal"
  }
}

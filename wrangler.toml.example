name="assistant"
main="src/index.ts"

compatibility_date = "2022-11-22"

kv_namespaces = [
  {binding = "assistant_chats",id = "<id>",preview_id = "<preview_id>"}
]

[vars]
ACCOUNT_ID=""
BEDROCK_GUARDRAIL_ID=""
BEDROCK_GUARDRAIL_VERSION="1"
GUARDRAILS_ENABLED="false"
GUARDRAILS_PROVIDER="bedrock"
BEDROCK_KNOWLEDGE_BASE_ID=""
BEDROCK_KNOWLEDGE_BASE_CUSTOM_DATA_SOURCE_ID=""
EMBEDDING_PROVIDER="bedrock"

[ai]
binding = "AI"

[[vectorize]]
binding = "VECTOR_DB"
index_name = "assistant-embeddings-baai"

[observability]
enabled = true
head_sampling_rate = 1

[observability.logs]
enabled = true
invocation_logs = false

[dev]
port = 8787

[[r2_buckets]]
binding = 'ASSETS_BUCKET'
bucket_name = 'assistant-assets'
preview_bucket_name = 'assistant-assets-preview'

[[d1_databases]]
binding = "DB"
database_name = "personal-web"
database_id = ""

[[unsafe.bindings]]
name = "RATE_LIMITER"
type = "ratelimit"
namespace_id = "1001"
simple = { limit = 100, period = 60 }

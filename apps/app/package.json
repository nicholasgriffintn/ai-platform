{
	"name": "@assistant/app",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "pnpm --filter @assistant/schemas build && react-router dev",
		"dev:scan": "pnpm dev & npx react-scan@latest localhost:5173",
		"build": "pnpm --filter @assistant/schemas build && pnpm run typecheck && react-router build",
		"start": "wrangler dev",
		"watch": "react-router build --watch",
		"typecheck": "react-router typegen && tsc -b",
		"format": "pnpm prettier --write .",
		"format:check": "pnpm prettier --check .",
		"lint": "pnpm oxlint",
		"check": "pnpm lint && pnpm format:check",
		"wrangler:dev": "pnpm run build && wrangler dev --remote",
		"deploy": "pnpm run build && wrangler deploy --minify",
		"sync": "npx cap sync",
		"test": "vitest run",
		"coverage": "vitest run --coverage"
	},
	"dependencies": {
		"@assistant/schemas": "workspace:*",
		"@babel/standalone": "^7.26.10",

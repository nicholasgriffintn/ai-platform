{
  "name": "@assistant/app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @assistant/schemas build && react-router dev",
    "dev:scan": "pnpm dev & npx react-scan@latest localhost:5173",
    "build": "pnpm --filter @assistant/schemas build && pnpm run typecheck && react-router build",
    "start": "wrangler dev",
    "watch": "react-router build --watch",
    "typecheck": "react-router typegen && tsc -b",
    "format": "pnpm biome format --write ./src",
    "lint": "pnpm biome lint ./src",
    "check": "pnpm biome check ./src",
    "wrangler:dev": "pnpm run build && wrangler dev --remote",
    "deploy": "pnpm run build && wrangler deploy --minify",
    "sync": "npx cap sync",
    "test": "vitest run",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@assistant/schemas": "workspace:*",
    "@babel/standalone": "^7.26.10",
    "@mlc-ai/web-llm": "0.2.79",
    "@radix-ui/react-checkbox": "^1.2.2",
    "@radix-ui/react-dialog": "^1.1.10",
    "@radix-ui/react-dropdown-menu": "^2.1.11",
    "@radix-ui/react-label": "2.1.7",
    "@radix-ui/react-popover": "^1.1.10",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-slider": "^1.3.2",
    "@radix-ui/react-slot": "1.2.3",
    "@radix-ui/react-switch": "^1.2.2",
    "@radix-ui/react-tabs": "^1.1.8",
    "@radix-ui/react-toggle": "^1.1.6",
    "@radix-ui/react-toggle-group": "^1.1.7",
    "@react-router/node": "7.9.3",
    "@react-router/serve": "7.9.3",
    "@simplewebauthn/browser": "^13.1.0",
    "@tanstack/react-query": "5.90.2",
    "@tanstack/react-query-devtools": "5.90.2",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "idb": "8.0.3",
    "isbot": "5.1.31",
    "lucide-react": "0.544.0",
    "next-themes": "^0.4.6",
    "posthog-js": "^1.252.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-markdown": "9.1.0",
    "react-router": "7.9.3",
    "rehype-highlight": "7.0.2",
    "remark-gfm": "4.0.1",
    "sonner": "^2.0.3",
    "tailwind-merge": "3.3.1",
    "tailwindcss": "4.1.14",
    "tw-animate-css": "^1.2.7",
    "virtua": "^0.43.0",
    "zustand": "5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@cloudflare/workers-types": "4.20250927.0",
    "@react-router/dev": "7.9.3",
    "@simplewebauthn/types": "^12.0.0",
    "@tailwindcss/typography": "0.5.19",
    "@tailwindcss/vite": "4.1.14",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@types/babel__standalone": "^7.1.7",
    "@types/node": "22.18.8",
    "@types/react": "19.1.16",
    "@types/react-dom": "19.1.9",
    "@vitejs/plugin-react": "5.0.4",
    "babel-plugin-react-compiler": "19.0.0-beta-ebf51a3-20250411",
    "globals": "16.4.0",
    "jsdom": "27.0.0",
    "rollup-plugin-visualizer": "6.0.4",
    "terser": "5.44.0",
    "typescript": "~5.9.0",
    "vite": "7.1.8",
    "vite-plugin-babel": "^1.3.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4",
    "wrangler": "4.40.3"
  }
}

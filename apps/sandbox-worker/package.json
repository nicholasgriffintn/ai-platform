{
	"name": "@assistant/sandbox-worker",
	"license": "Apache-2.0",
	"version": "0.0.1",
	"private": true,
	"main": "src/index.ts",
	"scripts": {
		"dev": "pnpm --filter @assistant/schemas build && wrangler dev src/index.ts",
		"start": "pnpm --filter @assistant/schemas build && wrangler dev src/index.ts",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"cf-typegen": "wrangler types",
		"format": "pnpm prettier --write .",
		"format:check": "pnpm prettier --check .",
		"lint": "pnpm oxlint",
		"check": "pnpm lint && pnpm format:check",
		"typecheck": "pnpm --filter @assistant/schemas build && tsc --noEmit",
		"deploy": "pnpm --filter @assistant/schemas build && pnpm typecheck && wrangler deploy src/index.ts --name=assistant-sandbox-worker"
	},
	"dependencies": {
		"@assistant/schemas": "workspace:*",
		"@cloudflare/sandbox": "0.7.0",
		"zod": "4.3.6"
	},
	"devDependencies": {
		"@prettier/plugin-oxc": "0.1.3",
		"@cloudflare/workers-types": "4.20260207.0",
		"@types/node": "^25.2.2",
		"oxlint": "1.43.0",
		"prettier": "3.8.1",
		"typescript": "5.9.3",
		"wrangler": "4.63.0"
	}
}

{
	"name": "@assistant/finetune",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"description": "AWS Bedrock fine-tuning toolkit for custom model training",
	"bin": {
		"finetune": "./dist/cli.js"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsx src/cli.ts",
		"typecheck": "tsc --noEmit",
		"lint": "pnpm oxlint",
		"format": "pnpm prettier --write .",
		"format:check": "pnpm prettier --check .",
		"check": "pnpm lint && pnpm format:check",
		"test": "vitest"
	},
	"dependencies": {
		"@aws-sdk/client-bedrock": "3.985.0",
		"@aws-sdk/client-s3": "3.985.0",
		"@aws-sdk/s3-request-presigner": "3.985.0",
		"better-sqlite3": "12.6.2",
		"chalk": "5.6.2",
		"commander": "14.0.3",
		"dotenv": "17.2.4",
		"ora": "9.3.0",
		"zod": "4.3.6"
	},
	"devDependencies": {
		"@prettier/plugin-oxc": "0.1.3",
		"@types/better-sqlite3": "7.6.13",
		"@types/node": "25.2.1",
		"oxlint": "1.43.0",
		"prettier": "3.8.1",
		"tsx": "4.21.0",
		"typescript": "5.9.3",
		"vitest": "4.0.18"
	}
}

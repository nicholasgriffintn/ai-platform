# Polychat configuration
API_URL=https://api.polychat.app
API_KEY=your_api_key_here

# AWS Credentials for Bedrock Fine-Tuning
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1

# S3 Buckets for Training Data
BEDROCK_TRAINING_BUCKET=your-training-bucket-name
BEDROCK_OUTPUT_BUCKET=your-output-bucket-name

# IAM Role ARN for Bedrock
BEDROCK_ROLE_ARN=arn:aws:iam::ACCOUNT_ID:role/BedrockFineTuningRole

# Optional: KMS Key for Encryption at Rest
# BEDROCK_KMS_KEY_ARN=arn:aws:kms:us-east-1:ACCOUNT_ID:key/KEY_ID

# Optional: VPC Configuration
# BEDROCK_VPC_SECURITY_GROUP_IDS=sg-xxxxx,sg-yyyyy
# BEDROCK_VPC_SUBNET_IDS=subnet-xxxxx,subnet-yyyyy

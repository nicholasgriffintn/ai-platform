{
  "name": "@assistant/metrics",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @assistant/schemas build && vite",
    "build": "pnpm --filter @assistant/schemas build && tsc -b && vite build",
    "preview": "vite preview",
    "watch": "vite build --watch",
    "format": "pnpm biome format --write ./src",
    "lint": "pnpm biome lint ./src",
    "check": "pnpm biome check ./src",
    "wrangler:dev": "pnpm run build && wrangler dev --remote",
    "deploy": "pnpm run build && wrangler deploy --minify",
    "test": "vitest run"
  },
  "dependencies": {
    "@radix-ui/react-label": "2.1.7",
    "@radix-ui/react-scroll-area": "1.2.10",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-slot": "1.2.3",
    "@tanstack/react-query": "5.90.5",
    "@tanstack/react-query-devtools": "5.90.2",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.546.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "recharts": "2.15.4",
    "tailwind-merge": "3.3.1",
    "tailwindcss": "4.1.16"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.7",
    "@cloudflare/workers-types": "4.20251014.0",
    "@tailwindcss/typography": "0.5.19",
    "@tailwindcss/vite": "4.1.16",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react": "5.0.4",
    "globals": "16.4.0",
    "jsdom": "27.0.1",
    "rollup-plugin-visualizer": "6.0.5",
    "terser": "5.44.0",
    "typescript": "~5.9.0",
    "vite": "7.1.12",
    "vitest": "3.2.4",
    "wrangler": "4.44.0"
  }
}

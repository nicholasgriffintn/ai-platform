{
	"name": "@assistant/metrics",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "pnpm --filter @assistant/schemas build && vite",
		"build": "pnpm --filter @assistant/schemas build && tsc -b && vite build",
		"preview": "vite preview",
		"watch": "vite build --watch",
		"format": "pnpm prettier --write .",
		"format:check": "pnpm prettier --check .",
		"lint": "pnpm oxlint",
		"check": "pnpm lint && pnpm format:check",
		"wrangler:dev": "pnpm run build && wrangler dev --remote",
		"deploy": "pnpm run build && wrangler deploy --minify",
		"test": "vitest run"
	},
	"dependencies": {
		"@radix-ui/react-label": "2.1.8",
		"@radix-ui/react-scroll-area": "1.2.10",
		"@radix-ui/react-select": "2.2.6",
		"@radix-ui/react-slot": "1.2.4",
		"@tanstack/react-query": "5.90.11",
		"@tanstack/react-query-devtools": "5.91.1",
		"class-variance-authority": "0.7.1",
		"clsx": "2.1.1",
		"lucide-react": "0.555.0",
		"react": "19.2.0",
		"react-dom": "19.2.0",
		"recharts": "2.15.4",
		"tailwind-merge": "3.4.0",
		"tailwindcss": "4.1.17"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "4.20251121.0",
		"@prettier/plugin-oxc": "^0.0.5",
		"@tailwindcss/typography": "0.5.19",
		"@tailwindcss/vite": "4.1.17",
		"@testing-library/jest-dom": "6.9.1",
		"@testing-library/react": "16.3.0",
		"@types/react": "19.2.7",
		"@types/react-dom": "19.2.3",
		"@vitejs/plugin-react": "5.1.1",
		"globals": "16.5.0",
		"jsdom": "27.2.0",
		"oxlint": "^1.25.0",
		"prettier": "^3.6.2",
		"rollup-plugin-visualizer": "6.0.5",
		"terser": "5.44.1",
		"typescript": "~5.9.0",
		"vite": "7.2.4",
		"vitest": "3.2.4",
		"wrangler": "4.50.0"
	}
}

{
	"name": "@assistant/metrics",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "pnpm --filter @assistant/schemas build && vite",
		"build": "pnpm --filter @assistant/schemas build && tsc -b && vite build",
		"preview": "vite preview",
		"watch": "vite build --watch",
		"format": "pnpm prettier --write .",
		"format:check": "pnpm prettier --check .",
		"lint": "pnpm oxlint",
		"check": "pnpm lint && pnpm format:check",
		"wrangler:dev": "pnpm run build && wrangler dev --remote",
		"deploy": "pnpm run build && wrangler deploy --minify",
		"test": "vitest run"
	},
	"dependencies": {
		"@radix-ui/react-label": "2.1.8",
		"@radix-ui/react-scroll-area": "1.2.10",
		"@radix-ui/react-select": "2.2.6",
		"@radix-ui/react-slot": "1.2.4",
		"@tanstack/react-query": "5.90.21",
		"@tanstack/react-query-devtools": "5.91.3",
		"class-variance-authority": "0.7.1",
		"clsx": "2.1.1",
		"lucide-react": "0.563.0",
		"react": "19.2.4",
		"react-dom": "19.2.4",
		"recharts": "3.7.0",
		"tailwind-merge": "3.4.0",
		"tailwindcss": "4.1.18"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "4.20260210.0",
		"@prettier/plugin-oxc": "0.1.3",
		"@tailwindcss/typography": "0.5.19",
		"@tailwindcss/vite": "4.1.18",
		"@testing-library/jest-dom": "6.9.1",
		"@testing-library/react": "16.3.2",
		"@types/react": "19.2.14",
		"@types/react-dom": "19.2.3",
		"@vitejs/plugin-react": "5.1.4",
		"globals": "17.3.0",
		"jsdom": "28.0.0",
		"oxlint": "1.47.0",
		"prettier": "3.8.1",
		"rollup-plugin-visualizer": "6.0.5",
		"terser": "5.46.0",
		"typescript": "~5.9.3",
		"vite": "7.3.1",
		"vitest": "4.0.18",
		"wrangler": "4.65.0"
	}
}

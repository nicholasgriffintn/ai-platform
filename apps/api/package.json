{
  "name": "@assistant/api",
  "license": "Apache-2.0",
  "version": "0.0.1",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "deploy": "pnpm typecheck && wrangler deploy src/index.ts --name=assistant",
    "dev": "wrangler dev src/index.ts --experimental-vectorize-bind-to-prod",
    "start": "wrangler dev src/index.ts",
    "test": "vitest",
    "cf-typegen": "wrangler types",
    "format": "pnpm biome format --write ./src",
    "lint": "pnpm biome lint ./src",
    "check": "pnpm biome check ./src",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:up": "drizzle-kit up:sqlite",
    "db:migrate:local": "wrangler d1 migrations apply personal-assistant --local",
    "db:migrate:preview": "wrangler d1 migrations apply personal-assistant-preview --remote",
    "db:migrate:prod": "wrangler d1 migrations apply personal-assistant --remote",
    "db:studio:local": "DB_LOCAL_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio",
    "db:studio:preview": "NODE_ENV='preview' drizzle-kit studio",
    "db:studio:prod": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/zod-validator": "0.5.0",
    "@octokit/rest": "21.1.1",
    "@scalar/hono-api-reference": "^0.8.0",
    "@simplewebauthn/server": "^13.1.1",
    "@tsndr/cloudflare-worker-jwt": "3.1.5",
    "agents": "^0.0.87",
    "aws4fetch": "1.0.20",
    "drizzle-orm": "0.43.1",
    "hono": "4.7.9",
    "hono-openapi": "0.4.8",
    "stripe": "^18.0.0",
    "zod": "3.24.4",
    "zod-openapi": "4.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/workers-types": "4.20250514.0",
    "@simplewebauthn/types": "^12.0.0",
    "@types/node": "22.15.18",
    "better-sqlite3": "^11.9.0",
    "drizzle-kit": "^0.31.0",
    "typescript": "5.8.3",
    "vitest": "3.1.3",
    "wrangler": "4.14.4"
  }
}

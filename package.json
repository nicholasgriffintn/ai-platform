    "deploy": "pnpm --filter @assistant/api --filter @assistant/app --filter @assistant/metrics deploy",
    "test:e2e": "playwright test --config=playwright.config.ts --tsconfig=tsconfig.playwright.json"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
